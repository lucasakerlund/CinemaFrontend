                        <Label alignment="TOP_LEFT" text="MOVIES" />
                     </children>
                  </HBox>
                  <HBox fx:id="scheduleBox" alignment="CENTER" prefHeight="50.0" styleClass="menu-bar-button">
                     <children>
                        <Label alignment="TOP_LEFT" text="SCHEDULE" />
                     </children>
                  </HBox>
                  <HBox fx:id="ticketsBox" alignment="CENTER" prefHeight="50.0" styleClass="menu-bar-button">
                     <children>
                        <Label alignment="TOP_LEFT" text="TICKETS" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="2.0" top="2.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
